<div class="cover">
  <div class="cover-inner">
    <div class="cover-contents">
      <h1>欲しいランキング</h1>
    </div>
  </div>
</div>
<div class="container">
  <div class="container-inner inner-default clearfix">
    <% num = 1 %>
    <% @items.each do |item| %>
      <div class="item-box">
        <p class="btn btn-warning"><%= num %>位</p>
        <div class="image">
          <div class="img-wrap">
            <% if item.large_image.present? %>
              <%= image_tag(item.large_image , alt: item.title) %>
            <% else %>
              <%= image_tag("no-image.png" , alt: item.title) %>
            <% end %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <%= item.title %>
          </p>
        </div>
        <%= render 'items/action' , item: item if logged_in? %>
      </div>
    <% num = num + 1 %>
    <% end %>
  </div>
</div>